---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact & Map</title>
    <!-- Link to Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Optional: Custom styles to preserve certain styles from the original CSS */
      .google_map iframe {
        filter: grayscale(
          100%
        ); /* Apply grayscale filter to make the map black and white */
      }
    </style>
  </head>
  <body class="bg-white">
    <div class="container mx-auto mt-12 pb-4">
      <!-- Google Map Section -->
      <section class="google_map mb-12">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3331.1248885061036!2d-70.79448872439295!3d-33.392889395886906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662cd92518f9e3d%3A0xa39fc6a3cb30b94d!2sAeropuerto%20Internacional%20Arturo%20Merino%20Ben%C3%ADtez!5e0!3m2!1ses-419!2scl!4v1721670780540!5m2!1ses-419!2scl"
          class="w-full h-96 border-0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        >
        </iframe>
      </section>

      <!-- Contact Info Section -->
      <section class="contactinfo relative -mt-[100px] px-4">
        <div class="container mx-auto">
          <div class="flex justify-center space-x-4">
            <!-- Contact Info Single (Mail Address) -->
            <div class="w-full sm:w-1/3 lg:w-1/4">
              <div
                class="contactinfo-single bg-white p-5 shadow-lg rounded-lg h-40 flex items-center flex-col"
              >
                <!-- Envelope Icon -->
                <div class="mb-4">
  <a href="tel:+56973814899">
    <button class="rounded-lg px-4 py-2 text-gray-900 bg-yellow-400 hover:bg-gray-900 duration-300 hover:text-yellow-400 flex items-center gap-2">
      <!-- Icono opcional -->
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 5h2l3.6 7.59a1 1 0 00.92.61h6.72a1 1 0 00.92-.61L21 5H3z"
        />
      </svg>
      Llamar
    </button>
  </a>
</div>

                <!-- Mail Content -->
                <div class="contactinfo-content text-center">
                  <h4 class="text-xl font-semibold text-gray-800 mb-2">
                    Celular 1
                  </h4>
                  <a
                    href="mailto:info@example.com"
                    class="text-gray-600 text-sm">+569 7381 4899</a
                  >
                </div>
              </div>
            </div>
  
            <!-- Contact Info Single (Call Us) -->
            <div class="w-full sm:w-1/3 lg:w-1/4">
              <div
                class="contactinfo-single bg-white p-5 shadow-lg rounded-lg h-40 flex items-center flex-col"
              >
                <!-- Phone Icon -->
                <div class="mb-4">
                  <!-- Kakao -->
                  <button
                    class="btn bg-yellow-400 text-[#181600] border-[#f1d800] hover:bg-gray-800 hover:text-yellow-400"
                  >
                    <svg
                      aria-label="Kakao logo"
                      width="25"
                      height="25"
                      viewBox="0 0 512 512"
                      xmlns="http://www.w3.org/2000/svg"
                      ><path
                        fill="#181600"
                        d="M255.5 48C299.345 48 339.897 56.5332 377.156 73.5996C414.415 90.666 443.871 113.873 465.522 143.22C487.174 172.566 498 204.577 498 239.252C498 273.926 487.174 305.982 465.522 335.42C443.871 364.857 414.46 388.109 377.291 405.175C340.122 422.241 299.525 430.775 255.5 430.775C241.607 430.775 227.262 429.781 212.467 427.795C148.233 472.402 114.042 494.977 109.892 495.518C107.907 496.241 106.012 496.15 104.208 495.248C103.486 494.706 102.945 493.983 102.584 493.08C102.223 492.177 102.043 491.365 102.043 490.642V489.559C103.126 482.515 111.335 453.169 126.672 401.518C91.8486 384.181 64.1974 361.2 43.7185 332.575C23.2395 303.951 13 272.843 13 239.252C13 204.577 23.8259 172.566 45.4777 143.22C67.1295 113.873 96.5849 90.666 133.844 73.5996C171.103 56.5332 211.655 48 255.5 48Z"
                      ></path></svg
                    >
                    Chat
                  </button>
                </div>
                <!-- Phone Content -->
                <div class="contactinfo-content text-center">
                  <h4 class="text-xl text-gray-800 font-semibold mb-2">
                    WhatsApp
                  </h4>
                  <a href="tel:+56973814899" class="text-gray-600 text-sm"
                    >+569 7381 4899</a
                  ><br />
                  <a href="tel:+56946690695" class="text-gray-600 text-sm"
                    >+569 4669 0695</a
                  >
                </div>
              </div>
            </div>

            <!-- Contact Info Single (Visit Us) -->
            <div class="w-full sm:w-1/3 lg:w-1/4">
              <div
                class="contactinfo-single bg-white p-5 shadow-lg rounded-lg h-40 flex items-center flex-col"
              >
                <!-- Location Pin Icon -->
                <div class="mb-4">
  <a href="tel:+56946690695">
    <button class="rounded-lg px-4 py-2 text-gray-900 bg-yellow-400 hover:bg-gray-900 duration-300 hover:text-yellow-400 flex items-center gap-2">
      <!-- Icono opcional -->
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 5h2l3.6 7.59a1 1 0 00.92.61h6.72a1 1 0 00.92-.61L21 5H3z"
        />
      </svg>
      Llamar
    </button>
  </a>
</div>
                <!-- Location Content -->
                <div class="contactinfo-content text-center">
                  <h4 class="text-xl text-gray-800 font-semibold mb-2">
                    Celular 2
                  </h4>
                  <p class="text-gray-600 text-sm">
                    +569 4669 0695
                  </p>
                </div>
              </div>
            </div>
          </div>
          <!-- 
 -->
        </div>
      </section>
    </div>
  </body>
</html>
